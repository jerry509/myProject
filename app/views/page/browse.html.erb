<h1>Listing users</h1>

<%= link_to "Create New User", new_user_path  %>



<%= form_tag do |f| %>
    <!--actually searches for 'Spokane' right now-->
    <label for="byCity">Spokane Users Only: </label>
    <%= check_box_tag "byCity", "yes", @byCity %>

    <label for="18-23">Male:  </label>
    <%= check_box_tag "male", "yes", @male %>

    <label for="18-23">Female:  </label>
    <%= check_box_tag "female", "yes", @female %>


    <%= submit_tag "Refresh", method: :get%>

<% end %>

<%= paginate @users %>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Birthdate</th>

    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>About</th>
    <th>Gender</th>
    <th>Admin</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.userName %></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.birthdate %></td>

        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zip %></td>
        <td><%= user.about %></td>
        <td><%= user.gender %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= paginate @users %>